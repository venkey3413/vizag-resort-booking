FROM pytorch/pytorch:2.1.1-cuda11.8-runtime-ubuntu20.04

WORKDIR /app

# Use pre-built PyTorch image, install remaining packages
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    langchain==0.0.350 \
    langchain-community==0.0.38 \
    langgraph==0.0.69 \
    chromadb==0.4.18 \
    sqlalchemy==2.0.23 \
    sentence-transformers==2.2.2 \
    openai==1.3.8 \
    python-multipart==0.0.6 \
    numpy==1.24.3

# Copy app
COPY . .
RUN mkdir -p chroma_store

EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]